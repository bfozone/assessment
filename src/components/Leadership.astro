---
import { presentationData } from "../data/presentation";

const { leadership } = presentationData;

// Section definitions for scrollytelling
const sections = [
  {
    id: "leadership-0",
    title: "My Leadership Principles",
    subtitle: "The beliefs that guide how I lead",
    color: "var(--ctp-mauve)",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  },
  {
    id: "leadership-1",
    title: "What Attracts Me to Leadership",
    subtitle: "The drive behind taking responsibility",
    color: "var(--ctp-green)",
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
  },
  {
    id: "leadership-2",
    title: "Leadership Styles I Don't Identify With",
    subtitle: "Honest reflection on what doesn't fit",
    color: "var(--ctp-peach)",
    icon: "M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636",
  },
];
---

<!-- Progress Indicator (right side) -->
<div id="leadership-progress" class="fixed right-6 top-1/2 -translate-y-1/2 z-50 hidden lg:flex flex-col gap-3">
  {sections.map((section, index) => (
    <button
      class="leadership-progress-dot group relative w-3 h-3 rounded-full bg-[var(--ctp-surface2)] transition-all duration-300 hover:bg-[var(--ctp-overlay0)]"
      data-index={index}
      aria-label={`Go to ${section.title}`}
    >
      <span
        class="absolute right-6 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap text-sm text-[var(--color-text-muted)] bg-[var(--color-surface)] px-2 py-1 rounded"
      >
        {section.title.split(' ').slice(0, 3).join(' ')}
      </span>
    </button>
  ))}
</div>

<!-- Fixed Scroll Arrow (bottom center) -->
<a
  id="leadership-scroll-arrow"
  href="#leadership-0"
  class="fixed bottom-8 left-1/2 -translate-x-1/2 z-50 hidden text-[var(--ctp-overlay0)] hover:text-[var(--ctp-mauve)] transition-all duration-300 hover:scale-110"
  aria-label="Scroll to next section"
>
  <svg class="w-8 h-8 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
  </svg>
</a>

<!-- Fixed arrow for Leadership Header -->
<a
  id="leadership-header-arrow"
  href="#leadership-0"
  class="fixed bottom-8 left-1/2 -translate-x-1/2 z-50 hidden text-[var(--ctp-overlay0)] hover:text-[var(--ctp-mauve)] transition-all duration-300 hover:scale-110"
  aria-label="Start exploring leadership"
>
  <svg class="w-8 h-8 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
  </svg>
</a>

<!-- Section Header (Full Screen) -->
<section id="leadership" class="min-h-[calc(100vh-4rem)] flex items-center justify-center px-4 scroll-mt-16">
  <div class="max-w-4xl mx-auto text-center">
    <p class="fade-in font-mono text-sm text-[var(--ctp-mauve)] uppercase tracking-widest mb-4">
      Part Three
    </p>
    <h3 class="fade-in text-4xl sm:text-5xl lg:text-6xl font-bold text-[var(--color-text)] mb-6">
      My Leadership
    </h3>
    <p class="fade-in text-lg text-[var(--color-text-muted)] max-w-2xl mx-auto">
      Principles I believe in, what drives me, and an honest look at what doesn't fit
    </p>
  </div>
</section>

<!-- Section 1: Leadership Principles (Manifesto Style) -->
<section
  class="leadership-section min-h-[75vh] flex items-center justify-center px-4 py-8 lg:py-12 relative scroll-mt-16"
  data-index="0"
  id="leadership-0"
>
  <!-- Background accent -->
  <div
    class="absolute inset-0 opacity-0 transition-opacity duration-1000 pointer-events-none"
    style="background: radial-gradient(ellipse at 30% 40%, color-mix(in srgb, var(--ctp-mauve) 10%, transparent), transparent 50%), radial-gradient(ellipse at 70% 60%, color-mix(in srgb, var(--ctp-mauve) 6%, transparent), transparent 60%);"
    data-bg
  />

  <div class="max-w-4xl mx-auto w-full relative">
    <!-- Section indicator -->
    <div class="leadership-content opacity-0 translate-y-8 transition-all duration-700 ease-out text-center mb-12">
      <div class="inline-flex items-center gap-2 mb-4">
        <div
          class="w-10 h-10 rounded-full flex items-center justify-center"
          style="background-color: color-mix(in srgb, var(--ctp-mauve) 20%, transparent);"
        >
          <svg
            class="w-5 h-5"
            style="color: var(--ctp-mauve);"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d={sections[0].icon} />
          </svg>
        </div>
        <span class="font-mono text-xs text-[var(--ctp-overlay0)] uppercase tracking-wider">
          Section 1 of 3
        </span>
      </div>
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-3" style="color: var(--ctp-mauve);">
        {sections[0].title}
      </h3>
      <p class="text-base lg:text-lg text-[var(--color-text-muted)] italic">
        {sections[0].subtitle}
      </p>
    </div>

    <!-- Manifesto Principles -->
    <div class="space-y-6">
      {leadership.principles.map((principle, index) => (
        <div
          class="leadership-item manifesto-item opacity-0 translate-y-4 transition-all duration-500"
          style={`transition-delay: ${index * 150 + 200}ms;`}
        >
          <div class="relative pl-8 lg:pl-12">
            <!-- Large quotation mark -->
            <span
              class="absolute left-0 top-0 text-4xl lg:text-5xl font-serif leading-none opacity-30"
              style="color: var(--ctp-mauve);"
            >
              "
            </span>
            <p class="text-xl sm:text-2xl lg:text-3xl font-semibold text-[var(--color-text)] leading-relaxed">
              {principle}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Leadership Style Description -->
    <div
      class="leadership-item opacity-0 translate-y-4 transition-all duration-500 mt-12"
      style="transition-delay: 950ms;"
    >
      <div class="bg-[var(--color-surface)] rounded-2xl p-6 lg:p-8 border-l-4" style="border-color: var(--ctp-mauve);">
        <p class="text-sm font-mono text-[var(--ctp-mauve)] uppercase tracking-wider mb-3">My Leadership Style</p>
        <p class="text-base lg:text-lg text-[var(--color-text)] leading-relaxed italic">
          "{leadership.style}"
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Section 2: What Attracts Me (Manifesto Style) -->
<section
  class="leadership-section min-h-[75vh] flex items-center justify-center px-4 py-8 lg:py-12 relative scroll-mt-16"
  data-index="1"
  id="leadership-1"
>
  <!-- Background accent -->
  <div
    class="absolute inset-0 opacity-0 transition-opacity duration-1000 pointer-events-none"
    style="background: radial-gradient(ellipse at 30% 40%, color-mix(in srgb, var(--ctp-green) 10%, transparent), transparent 50%), radial-gradient(ellipse at 70% 60%, color-mix(in srgb, var(--ctp-green) 6%, transparent), transparent 60%);"
    data-bg
  />

  <div class="max-w-4xl mx-auto w-full relative">
    <!-- Section indicator -->
    <div class="leadership-content opacity-0 translate-y-8 transition-all duration-700 ease-out text-center mb-12">
      <div class="inline-flex items-center gap-2 mb-4">
        <div
          class="w-10 h-10 rounded-full flex items-center justify-center"
          style="background-color: color-mix(in srgb, var(--ctp-green) 20%, transparent);"
        >
          <svg
            class="w-5 h-5"
            style="color: var(--ctp-green);"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d={sections[1].icon} />
          </svg>
        </div>
        <span class="font-mono text-xs text-[var(--ctp-overlay0)] uppercase tracking-wider">
          Section 2 of 3
        </span>
      </div>
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-3" style="color: var(--ctp-green);">
        {sections[1].title}
      </h3>
      <p class="text-base lg:text-lg text-[var(--color-text-muted)] italic">
        {sections[1].subtitle}
      </p>
    </div>

    <!-- Appeal Items - Large Statement Blocks -->
    <div class="grid gap-4 lg:gap-6">
      {leadership.appeal.map((item, index) => (
        <div
          class="leadership-item opacity-0 translate-y-4 transition-all duration-500"
          style={`transition-delay: ${index * 150 + 200}ms;`}
        >
          <div
            class="bg-[var(--color-surface)] rounded-xl lg:rounded-2xl p-5 lg:p-8 border border-[var(--ctp-surface1)] hover:border-[var(--ctp-green)] transition-colors group"
          >
            <div class="flex items-center gap-4 lg:gap-6">
              <span
                class="flex-shrink-0 w-12 h-12 lg:w-14 lg:h-14 rounded-xl flex items-center justify-center text-white font-bold text-lg lg:text-xl group-hover:scale-110 transition-transform"
                style="background-color: var(--ctp-green);"
              >
                {index + 1}
              </span>
              <p class="text-lg sm:text-xl lg:text-2xl font-medium text-[var(--color-text)]">
                {item}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Section 3: Contrast Layout (My Style vs Not My Style) -->
<section
  class="leadership-section min-h-[75vh] flex items-center justify-center px-4 py-8 lg:py-12 relative scroll-mt-16"
  data-index="2"
  id="leadership-2"
>
  <!-- Background accent -->
  <div
    class="absolute inset-0 opacity-0 transition-opacity duration-1000 pointer-events-none"
    style="background: radial-gradient(ellipse at 30% 40%, color-mix(in srgb, var(--ctp-peach) 10%, transparent), transparent 50%), radial-gradient(ellipse at 70% 60%, color-mix(in srgb, var(--ctp-peach) 6%, transparent), transparent 60%);"
    data-bg
  />

  <div class="max-w-5xl mx-auto w-full relative">
    <!-- Section indicator -->
    <div class="leadership-content opacity-0 translate-y-8 transition-all duration-700 ease-out text-center mb-12">
      <div class="inline-flex items-center gap-2 mb-4">
        <div
          class="w-10 h-10 rounded-full flex items-center justify-center"
          style="background-color: color-mix(in srgb, var(--ctp-peach) 20%, transparent);"
        >
          <svg
            class="w-5 h-5"
            style="color: var(--ctp-peach);"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d={sections[2].icon} />
          </svg>
        </div>
        <span class="font-mono text-xs text-[var(--ctp-overlay0)] uppercase tracking-wider">
          Section 3 of 3
        </span>
      </div>
      <h3 class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-3" style="color: var(--ctp-peach);">
        {sections[2].title}
      </h3>
      <p class="text-base lg:text-lg text-[var(--color-text-muted)] italic">
        {sections[2].subtitle}
      </p>
    </div>

    <!-- Contrast Grid -->
    <div class="grid lg:grid-cols-2 gap-6 lg:gap-8">
      <!-- Left: What I Believe (Positive) -->
      <div
        class="leadership-item opacity-0 -translate-x-8 transition-all duration-700"
        style="transition-delay: 200ms;"
      >
        <div class="h-full bg-[var(--color-surface)] rounded-2xl p-6 lg:p-8 border-2 border-[var(--ctp-green)]">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 rounded-full bg-[var(--ctp-green)] flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h4 class="text-xl lg:text-2xl font-bold text-[var(--ctp-green)]">What I Believe In</h4>
          </div>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <span class="w-2 h-2 rounded-full bg-[var(--ctp-green)] mt-2 flex-shrink-0"></span>
              <span class="text-base lg:text-lg text-[var(--color-text)]">Empowering teams with trust and autonomy</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-2 h-2 rounded-full bg-[var(--ctp-green)] mt-2 flex-shrink-0"></span>
              <span class="text-base lg:text-lg text-[var(--color-text)]">Clear direction with room for initiative</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-2 h-2 rounded-full bg-[var(--ctp-green)] mt-2 flex-shrink-0"></span>
              <span class="text-base lg:text-lg text-[var(--color-text)]">Open dialogue and mutual feedback</span>
            </li>
            <li class="flex items-start gap-3">
              <span class="w-2 h-2 rounded-full bg-[var(--ctp-green)] mt-2 flex-shrink-0"></span>
              <span class="text-base lg:text-lg text-[var(--color-text)]">Results through collaboration</span>
            </li>
          </ul>
        </div>
      </div>

      <!-- Right: What I Don't Identify With (Negative) -->
      <div
        class="leadership-item opacity-0 translate-x-8 transition-all duration-700"
        style="transition-delay: 400ms;"
      >
        <div class="h-full bg-[var(--color-surface)] rounded-2xl p-6 lg:p-8 border-2 border-[var(--ctp-peach)]">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-10 h-10 rounded-full bg-[var(--ctp-peach)] flex items-center justify-center">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </div>
            <h4 class="text-xl lg:text-2xl font-bold text-[var(--ctp-peach)]">What Doesn't Fit</h4>
          </div>
          <ul class="space-y-5">
            {leadership.notMyStyle.map((item) => (
              <li class="border-b border-[var(--ctp-surface1)] pb-4 last:border-0 last:pb-0">
                <p class="font-semibold text-base lg:text-lg text-[var(--color-text)] mb-1">{item.style}</p>
                <p class="text-sm lg:text-base text-[var(--ctp-subtext0)]">{item.reason}</p>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .leadership-section.in-view .leadership-content {
    opacity: 1;
    transform: translateY(0);
  }

  .leadership-section.in-view .leadership-item {
    opacity: 1;
    transform: translateX(0) translateY(0);
  }

  .leadership-section.in-view [data-bg] {
    opacity: 1;
  }

  .leadership-progress-dot.active {
    width: 0.75rem;
    height: 1.5rem;
    border-radius: 0.375rem;
  }

  .manifesto-item {
    position: relative;
  }

  .manifesto-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 0;
    background-color: var(--ctp-mauve);
    transition: height 0.5s ease-out;
  }

  .leadership-section.in-view .manifesto-item::before {
    height: 100%;
  }
</style>

<script>
  function initLeadershipScrolling() {
    const sections = document.querySelectorAll('.leadership-section');
    const progressDots = document.querySelectorAll('.leadership-progress-dot');
    const progressContainer = document.getElementById('leadership-progress');
    const scrollArrow = document.getElementById('leadership-scroll-arrow');
    const headerArrow = document.getElementById('leadership-header-arrow');
    const leadershipHeader = document.getElementById('leadership');

    if (!sections.length) return;

    // Header arrow visibility
    if (leadershipHeader && headerArrow) {
      const headerObserver = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              headerArrow.style.display = 'block';
            } else {
              headerArrow.style.display = 'none';
            }
          });
        },
        { threshold: 0.5 }
      );
      headerObserver.observe(leadershipHeader);
    }

    // Intersection Observer for sections
    const sectionObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('in-view');

            const index = parseInt(entry.target.getAttribute('data-index') || '0');

            // Update progress dots
            const colors = ['var(--ctp-mauve)', 'var(--ctp-green)', 'var(--ctp-peach)'];
            progressDots.forEach((dot, i) => {
              dot.classList.toggle('active', i === index);
              if (i === index) {
                (dot as HTMLElement).style.backgroundColor = colors[i];
              } else {
                (dot as HTMLElement).style.backgroundColor = '';
              }
            });

            // Update scroll arrow - hide on last section
            if (scrollArrow) {
              const nextIndex = index + 1;
              if (nextIndex < sections.length) {
                scrollArrow.setAttribute('href', `#leadership-${nextIndex}`);
                scrollArrow.style.display = 'block';
              } else {
                // Hide arrow on last section
                scrollArrow.style.display = 'none';
              }
            }
          }
        });
      },
      {
        threshold: 0.3,
        rootMargin: '-20% 0px -20% 0px'
      }
    );

    sections.forEach((section) => {
      sectionObserver.observe(section);
    });

    // Show/hide navigation elements
    const lastSection = sections[sections.length - 1];
    const firstSection = sections[0];

    const showObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            const index = parseInt(entry.target.getAttribute('data-index') || '0');
            // Only show arrow if not on last section
            if (scrollArrow && index < sections.length - 1) {
              scrollArrow.style.display = 'block';
            }
            if (progressContainer) progressContainer.style.display = 'flex';
          }
        });
      },
      { threshold: 0.3 }
    );

    sections.forEach((section) => showObserver.observe(section));

    // Hide when past last section
    const hideObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (!entry.isIntersecting && entry.boundingClientRect.top < 0) {
            if (scrollArrow) scrollArrow.style.display = 'none';
            if (progressContainer) progressContainer.style.display = 'none';
          }
        });
      },
      { threshold: 0 }
    );

    if (lastSection) hideObserver.observe(lastSection);

    // Hide when above first section
    const hideAboveObserver = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (!entry.isIntersecting && entry.boundingClientRect.top > 0) {
            if (scrollArrow) scrollArrow.style.display = 'none';
            if (progressContainer) progressContainer.style.display = 'none';
          }
        });
      },
      { threshold: 0 }
    );

    if (firstSection) hideAboveObserver.observe(firstSection);

    // Click to navigate (progress dots)
    progressDots.forEach((dot) => {
      dot.addEventListener('click', () => {
        const index = dot.getAttribute('data-index');
        const targetSection = document.querySelector(`.leadership-section[data-index="${index}"]`);
        if (targetSection) {
          targetSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }
      });
    });
  }

  initLeadershipScrolling();
  document.addEventListener('astro:after-swap', initLeadershipScrolling);
</script>
