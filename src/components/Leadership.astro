---
import { presentations, labels } from "../data/presentation";

const leadershipDE = presentations.de.leadership;
const leadershipEN = presentations.en.leadership;
const labelsDE = labels.de.leadership;
const labelsEN = labels.en.leadership;

// Section definitions for scrollytelling
const sections = [
  {
    id: "leadership-0",
    titleDE: labelsDE.sections.principles.title,
    titleEN: labelsEN.sections.principles.title,
    subtitleDE: labelsDE.sections.principles.subtitle,
    subtitleEN: labelsEN.sections.principles.subtitle,
    color: "var(--ctp-mauve)",
    icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
  },
  {
    id: "leadership-1",
    titleDE: labelsDE.sections.appeal.title,
    titleEN: labelsEN.sections.appeal.title,
    subtitleDE: labelsDE.sections.appeal.subtitle,
    subtitleEN: labelsEN.sections.appeal.subtitle,
    color: "var(--ctp-green)",
    icon: "M13 10V3L4 14h7v7l9-11h-7z",
  },
  {
    id: "leadership-2",
    titleDE: labelsDE.sections.notMyStyle.title,
    titleEN: labelsEN.sections.notMyStyle.title,
    subtitleDE: labelsDE.sections.notMyStyle.subtitle,
    subtitleEN: labelsEN.sections.notMyStyle.subtitle,
    color: "var(--ctp-peach)",
    icon: "M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636",
  },
];

// Matched contrast pairs: notMyStyle → believe (3 pairs)
const contrastPairsDE = [
  "Vertrauen und Raum für Eigenverantwortung",
  "Offenheit und transparente Kommunikation",
  "Klare Richtung mit aktivem Vorleben",
];
const contrastPairsEN = [
  "Trust and room for autonomy",
  "Openness and transparent communication",
  "Clear direction with leading by example",
];
---

<!-- Progress Indicator (right side) -->
<div id="leadership-progress" class="fixed right-6 top-1/2 -translate-y-1/2 z-50 hidden lg:flex flex-col gap-3">
  {sections.map((section, index) => (
    <button
      class="leadership-progress-dot group relative w-3 h-3 rounded-full bg-[var(--ctp-surface2)] transition-all duration-300 hover:bg-[var(--ctp-overlay0)]"
      data-index={index}
      aria-label={`Go to ${section.titleDE}`}
    >
      <span
        class="leadership-tooltip absolute right-6 top-1/2 -translate-y-1/2 opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap text-sm text-[var(--color-text-muted)] bg-[var(--color-surface)] px-2 py-1 rounded"
        data-i18n={`lead-tooltip-${index}`}
        data-de={`${labelsDE.questionLabel} ${index + 1}`}
        data-en={`${labelsEN.questionLabel} ${index + 1}`}
      >
        {labelsDE.questionLabel} {index + 1}
      </span>
    </button>
  ))}
</div>

<!-- Fixed Scroll Arrow (bottom center) -->
<a
  id="leadership-scroll-arrow"
  href="#leadership-0"
  class="fixed bottom-8 left-1/2 -translate-x-1/2 z-50 hidden text-[var(--ctp-overlay0)] hover:text-[var(--ctp-mauve)] transition-all duration-300 hover:scale-110"
  aria-label="Scroll to next section"
>
  <svg class="w-8 h-8 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
  </svg>
</a>

<!-- Fixed arrow for Leadership Header -->
<a
  id="leadership-header-arrow"
  href="#leadership-0"
  class="fixed bottom-8 left-1/2 -translate-x-1/2 z-50 hidden text-[var(--ctp-overlay0)] hover:text-[var(--ctp-mauve)] transition-all duration-300 hover:scale-110"
  aria-label="Start exploring leadership"
>
  <svg class="w-8 h-8 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
  </svg>
</a>

<!-- Section Header (Full Screen) -->
<section id="leadership" class="min-h-[calc(100vh-4rem)] flex items-center justify-center px-4 scroll-mt-16">
  <div class="max-w-4xl mx-auto text-center">
    <p
      class="fade-in font-mono text-sm text-[var(--ctp-mauve)] uppercase tracking-widest mb-4"
      data-i18n="lead-part"
      data-de={labelsDE.partLabel}
      data-en={labelsEN.partLabel}
    >
      {labelsDE.partLabel}
    </p>
    <h3
      class="fade-in text-4xl sm:text-5xl lg:text-6xl font-bold text-[var(--color-text)] mb-6"
      data-i18n="lead-title"
      data-de={labelsDE.title}
      data-en={labelsEN.title}
    >
      {labelsDE.title}
    </h3>
    <p
      class="fade-in text-lg text-[var(--color-text-muted)] max-w-2xl mx-auto"
      data-i18n="lead-subtitle"
      data-de={labelsDE.subtitle}
      data-en={labelsEN.subtitle}
    >
      {labelsDE.subtitle}
    </p>
  </div>
</section>

<!-- Section 1: Leadership Principles (Manifesto Style) -->
<section
  class="leadership-section min-h-[75dvh] flex items-center justify-center px-4 py-8 lg:py-12 relative scroll-mt-16"
  data-index="0"
  id="leadership-0"
>
  <!-- Background accent -->
  <div
    class="absolute inset-0 opacity-0 transition-opacity duration-1000 pointer-events-none"
    style="background: radial-gradient(ellipse at 30% 40%, color-mix(in srgb, var(--ctp-mauve) 10%, transparent), transparent 50%), radial-gradient(ellipse at 70% 60%, color-mix(in srgb, var(--ctp-mauve) 6%, transparent), transparent 60%);"
    data-bg
  />

  <div class="max-w-4xl mx-auto w-full relative">
    <!-- Section indicator -->
    <div class="leadership-content opacity-0 translate-y-8 transition-all duration-700 ease-out text-center mb-12">
      <div class="inline-flex items-center gap-2 mb-4">
        <div
          class="w-10 h-10 rounded-full flex items-center justify-center"
          style="background-color: color-mix(in srgb, var(--ctp-mauve) 20%, transparent);"
        >
          <svg
            class="w-5 h-5"
            style="color: var(--ctp-mauve);"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            stroke-width="2"
          >
            <path stroke-linecap="round" stroke-linejoin="round" d={sections[0].icon} />
          </svg>
        </div>
        <span
          class="font-mono text-xs text-[var(--ctp-overlay0)] uppercase tracking-wider"
          data-i18n="lead-sec0-label"
          data-de={`${labelsDE.questionLabel} 1 von 3`}
          data-en={`${labelsEN.questionLabel} 1 of 3`}
        >
          {labelsDE.questionLabel} 1 von 3
        </span>
      </div>
      <h3
        class="text-3xl sm:text-4xl lg:text-5xl font-bold mb-3"
        style="color: var(--ctp-mauve);"
        data-i18n="lead-sec0-title"
        data-de={sections[0].titleDE}
        data-en={sections[0].titleEN}
      >
        {sections[0].titleDE}
      </h3>
      <p
        class="text-base lg:text-lg text-[var(--color-text-muted)] italic"
        data-i18n="lead-sec0-sub"
        data-de={sections[0].subtitleDE}
        data-en={sections[0].subtitleEN}
      >
        {sections[0].subtitleDE}
      </p>
    </div>

    <!-- Manifesto Principles -->
    <div class="space-y-6">
      {leadershipDE.principles.map((principle, index) => (
        <div
          class="leadership-item manifesto-item opacity-0 translate-y-4 transition-all duration-500 pl-4"
          style={`transition-delay: ${index * 150 + 200}ms;`}
        >
          <div class="relative">
            <p
              class="text-base lg:text-lg font-semibold text-[var(--color-text)] leading-relaxed"
              data-i18n={`lead-principle-${index}`}
              data-de={principle}
              data-en={leadershipEN.principles[index] || principle}
            >
              {principle}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Leadership Style Description -->
    <div
      class="leadership-item opacity-0 translate-y-4 transition-all duration-500 mt-12"
      style="transition-delay: 950ms;"
    >
      <div class="bg-[var(--color-surface)] rounded-2xl p-6 lg:p-8 border-l-4" style="border-color: var(--ctp-mauve);">
        <p
          class="text-sm font-mono text-[var(--ctp-mauve)] uppercase tracking-wider mb-3"
          data-i18n="lead-style-label"
          data-de={labelsDE.sections.style.title}
          data-en={labelsEN.sections.style.title}
        >
          {labelsDE.sections.style.title}
        </p>
        <p
          class="text-base lg:text-lg text-[var(--color-text)] leading-relaxed italic"
          data-i18n="lead-style-text"
          data-de={`"${leadershipDE.style}"`}
          data-en={`"${leadershipEN.style}"`}
        >
          "{leadershipDE.style}"
        </p>
      </div>
    </div>
  </div>
</section>

