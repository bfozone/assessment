---
import ThemeToggle from "./ThemeToggle.astro";
import LanguageToggle from "./LanguageToggle.astro";
import { labels } from "../data/presentation";

const labelsDE = labels.de;
const labelsEN = labels.en;

const navItems = [
  { href: "#pitch", labelDE: labelsDE.nav.pitch, labelEN: labelsEN.nav.pitch },
  { href: "#motivation", labelDE: labelsDE.nav.motivation, labelEN: labelsEN.nav.motivation },
  { href: "#leadership", labelDE: labelsDE.nav.leadership, labelEN: labelsEN.nav.leadership },
];
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-[var(--color-bg)]/90 backdrop-blur-md border-b border-[var(--color-border)]"
>
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo/Title -->
      <a
        href="#"
        class="font-mono text-sm font-semibold text-[var(--ctp-mauve)] hover:text-[var(--ctp-pink)] transition-colors"
      >
        Benjamin Fink
      </a>

      <!-- Navigation -->
      <div class="hidden sm:flex items-center gap-8">
        {
          navItems.map((item) => (
            <a
              href={item.href}
              class="nav-link text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors"
              data-label-de={item.labelDE}
              data-label-en={item.labelEN}
            >
              <span class="nav-text">{item.labelDE}</span>
            </a>
          ))
        }
      </div>

      <!-- Controls -->
      <div class="flex items-center gap-2">
        <!-- Mobile Menu Button -->
        <button
          id="mobile-menu-btn"
          class="sm:hidden p-2 rounded-lg hover:bg-[var(--ctp-surface0)] transition-colors"
          aria-label="Menu"
        >
          <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
        <LanguageToggle />
        <ThemeToggle />
      </div>
    </div>

    <!-- Mobile Menu -->
    <div
      id="mobile-menu"
      class="sm:hidden hidden pb-4 border-t border-[var(--color-border)] mt-2 pt-4"
    >
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="mobile-nav-link block py-2 text-sm text-[var(--color-text-muted)] hover:text-[var(--color-text)] transition-colors"
            data-label-de={item.labelDE}
            data-label-en={item.labelEN}
          >
            <span class="nav-text">{item.labelDE}</span>
          </a>
        ))
      }
    </div>
  </nav>
</header>

<script>
  function initHeader() {
    const menuBtn = document.getElementById("mobile-menu-btn");
    const mobileMenu = document.getElementById("mobile-menu");
    const STORAGE_KEY = "presentation-language";

    // Mobile menu toggle
    if (menuBtn && menuBtn.dataset.bound !== "true") {
      menuBtn.dataset.bound = "true";

      menuBtn.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
      });

      mobileMenu?.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
          mobileMenu.classList.add("hidden");
        });
      });
    }

    // Language handling for nav links
    function getLanguage(): "de" | "en" {
      const stored = localStorage.getItem(STORAGE_KEY);
      return stored === "en" ? "en" : "de";
    }

    function updateNavLabels(lang: "de" | "en") {
      document.querySelectorAll("[data-label-de][data-label-en]").forEach((link) => {
        const textEl = link.querySelector(".nav-text");
        if (textEl) {
          const label = lang === "en" ? link.getAttribute("data-label-en") : link.getAttribute("data-label-de");
          textEl.textContent = label;
        }
      });
    }

    // Initialize
    updateNavLabels(getLanguage());

    // Listen for language changes
    window.addEventListener("languageChange", (e: Event) => {
      const detail = (e as CustomEvent).detail;
      if (detail?.language) {
        updateNavLabels(detail.language);
      }
    });
  }

  initHeader();
  document.addEventListener("astro:after-swap", initHeader);
</script>
